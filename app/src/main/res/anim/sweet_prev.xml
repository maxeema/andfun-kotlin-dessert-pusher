<?xml version="1.0" encoding="utf-8"?>

<set xmlns:android="http://schemas.android.com/apk/res/android" android:shareInterpolator="false">
    <scale android:interpolator="@android:interpolator/decelerate_quad"
        android:fromXScale="0" android:toXScale="1"
        android:fromYScale="0" android:toYScale="1"
        android:pivotX="50%" android:pivotY="50%"
        android:duration="450" />
    <translate android:fromXDelta="-75%" android:toXDelta="0%"
        android:duration="750" android:interpolator="@android:interpolator/bounce"/>
    <alpha android:interpolator="@android:interpolator/accelerate_quint"
        android:fromAlpha="0" android:toAlpha="1.0"
        android:duration="200" />
</set>